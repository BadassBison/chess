{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./",
    "noImplicitAny": false,
    "strict": false,
    "module": "esNext",
    "target": "esNext",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}